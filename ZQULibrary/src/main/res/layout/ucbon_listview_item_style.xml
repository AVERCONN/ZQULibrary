<?xml version="1.0" encoding="utf-8"?>
<!-- 催还图书 listview样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_bg"
    android:orientation="vertical"
    android:padding="@dimen/content_border_margin" >

    <TextView
        android:id="@+id/ucbonListviewItemStyle_bookName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="精通 Android 4"
        android:textColor="#454545"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ucbonListviewItemStyle_returnDate_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_border_margin"
        android:text="应还期:2013-10-27"
        android:textColor="@color/common_text_color"
        android:textSize="15sp" />

</LinearLayout>