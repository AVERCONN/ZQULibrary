<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 搴旂敤鐨勬牱寮� -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar"></style>

    <style name="main_item_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/content_border_margin</item>
        <item name="android:paddingRight">@dimen/content_border_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/gridview_item_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/content_border_margin</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:background">@drawable/titlebar_bg</item>
    </style>

    <style name="titlebar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawableLeft">@drawable/titlebar_back_icon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/titlebar_text_size</item>
        <item name="android:background">@drawable/selector_titlebar_item_bg</item>
    </style>

    <style name="bookInfoPageBase_item_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/content_border_margin</item>
    </style>

    <style name="bookInfoPageBase_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="userCenter_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">@dimen/content_border_margin</item>
        <item name="android:layout_marginRight">@dimen/content_border_margin</item>
        <item name="android:drawableRight">@drawable/list_item_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@color/listview_divider</item>
        <item name="android:dividerHeight">@dimen/listview_dividerHeight</item>
    </style>

    <style name="input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_input_height</item>
        <item name="android:layout_marginLeft">@dimen/content_border_margin</item>
        <item name="android:layout_marginRight">@dimen/content_border_margin</item>
        <item name="android:background">@drawable/text_input_bg</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 杈规 -->
        <item name="android:windowIsFloating">true</item> <!-- 鏄惁娴幇鍦╝ctivity涔嬩笂 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 鍗婇�忔槑 -->
        <item name="android:windowNoTitle">true</item> <!-- 鏃犳爣棰� -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 鑳屾櫙閫忔槑 -->
        <item name="android:backgroundDimEnabled">true</item> <!-- 妯＄硦 -->
    </style>

</resources>